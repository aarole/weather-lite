<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aarole.weather_lite.MainActivity">

    <TextView
        android:id="@+id/lblCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City: "
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#FF0000"/>
    <TextView
        android:id="@+id/txtCity"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/lblCity"/>

    <TextView
        android:textColor="#FF0000"
        android:id="@+id/lblKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Key: "
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:layout_above="@+id/txtCity"
        android:layout_toRightOf="@+id/lblCity"
        />
    <TextView
        android:id="@+id/txtKey"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        android:layout_above="@id/txtCity"
        android:layout_toRightOf="@+id/lblKey"/>
    <TextView
        android:textColor="#FF0000"
        android:id="@+id/lblCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country: "
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/txtCity"/>
    <TextView
        android:id="@+id/txtCountry"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="30dp"
        android:layout_below="@+id/lblCountry"/>


    <TextView
        android:textColor="#FF0000"
        android:id="@+id/lblTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature: "
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/txtCountry"/>
    <TextView
        android:id="@+id/txtTemp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/lblTemp"/>
    <RadioGroup
        android:id="@+id/radtgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lblTemp"
        android:layout_below="@id/txtCountry"
        android:orientation="horizontal"
        android:checkedButton="@id/radC"
        android:layout_marginTop="7dp">
        <RadioButton
            android:id="@+id/radC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"/>
        <RadioButton
            android:id="@+id/radF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F"/>
    </RadioGroup>

    <TextView
        android:textColor="#FF0000"
        android:id="@+id/lblWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather: "
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/txtTemp"/>
    <TextView
        android:id="@+id/txtWeather"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_below="@+id/lblWeather"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:textColor="#FF0000"
        android:id="@+id/lblHumid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity (%): "
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/txtWeather"/>
    <TextView
        android:id="@+id/txtHumid"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_below="@+id/lblHumid"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:textColor="#FF0000"
        android:id="@+id/lblWindS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind Speed: "
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/txtHumid"/>
    <TextView
        android:id="@+id/txtWindS"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_below="@+id/lblWindS"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:textColor="#FF0000"
        android:id="@+id/lblWindD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind Direction: "
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/txtWindS"/>
    <TextView
        android:id="@+id/txtWindD"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_below="@+id/lblWindD"
        android:layout_marginLeft="15dp"/>


    <Button
        android:id="@+id/backBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="back"
        android:layout_marginBottom="12dp"/>
    <RadioGroup
        android:id="@+id/radwgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lblWindS"
        android:layout_below="@id/txtHumid"
        android:orientation="horizontal"
        android:checkedButton="@id/radkmh"
        android:layout_marginTop="7dp">
        <RadioButton
            android:id="@+id/radkmh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kmph"/>
        <RadioButton
            android:id="@+id/radmps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m/s"/>
        <RadioButton
            android:id="@+id/radmh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mph"/>
    </RadioGroup>


</RelativeLayout>